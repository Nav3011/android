<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/b00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40dp"

        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"/>
    <Button
        android:id="@+id/b01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="40dp"

        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/b00"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b02"

        android:textSize="40dp"

        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/b01"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b10"

        android:textSize="40dp"

        android:layout_below="@+id/b00"
        android:layout_alignLeft="@+id/b00"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b11"

        android:textSize="40dp"

        android:layout_below="@+id/b01"
        android:layout_alignLeft="@+id/b01"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b12"

        android:textSize="40dp"

        android:layout_below="@+id/b02"
        android:layout_alignLeft="@+id/b02"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b20"

        android:textSize="40dp"

        android:layout_below="@+id/b10"
        android:layout_alignLeft="@+id/b10"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b21"

        android:textSize="40dp"

        android:layout_below="@+id/b11"
        android:layout_alignLeft="@+id/b11"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b22"

        android:textSize="40dp"

        android:layout_below="@+id/b12"
        android:layout_alignLeft="@+id/b12"/>

</RelativeLayout>